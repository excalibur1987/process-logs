{
	"name": "process-logs",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"format:staged": "prettier --write --ignore-path .gitignore $(git diff --cached --name-only --diff-filter=d | grep -E '\\.(ts|svelte)$')",
		"format:push": "prettier --write --ignore-path .gitignore $(git diff --diff-filter=d --name-only origin/master..HEAD | grep -E '\\.(ts|svelte)$')",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:push": "drizzle-kit push",
		"db:pull": "drizzle-kit pull && bun run format"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.47.2",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"autoprefixer": "^10.4.21",
		"daisyui": "^4.12.24",
		"dotenv": "^16.6.1",
		"drizzle-kit": "^0.31.5",
		"postcss": "^8.5.6",
		"prettier-plugin-organize-imports": "^4.3.0",
		"svelte": "^5.41.1",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^3.4.18",
		"typescript": "^5.9.3",
		"vite": "^5.4.21"
	},
	"dependencies": {
		"@sveltejs/adapter-node": "^5.4.0",
		"@types/lodash": "^4.17.20",
		"@types/pg": "^8.15.5",
		"change-case": "^5.4.4",
		"date-fns": "^2.30.0",
		"drizzle-orm": "^0.44.6",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^9.1.2",
		"eslint-plugin-svelte": "^2.46.1",
		"express": "^4.21.2",
		"lodash": "^4.17.21",
		"postgres": "^3.4.7",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"zod": "^3.25.76"
	},
	"type": "module"
}
